// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  exams    Exam[]
}

model Exam {
  id          Int       @id @default(autoincrement())
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     Int
  title       String
  isPublic    Boolean
  duration    Int?
  type        String?
  examName    String?
  date        DateTime?
  description String?
  subjectName String?
  grade       String?
  publishers  String?
  parts       Part[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model Part {
  id              Int        @id @default(autoincrement())
  clientId        Int?
  exam            Exam       @relation(fields: [examId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  examId          Int
  title           String
  type            String
  totalPoints     Int
  description     String?
  numberOfAnswers Int?
  questions       Question[]
}

model Question {
  id          Int      @id @default(autoincrement())
  clientId    Int?
  part        Part     @relation(fields: [partId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  partId      Int
  title       String
  description String?
  explain     String?
  answers     Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  clientId   Int?
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  questionId Int
  value      String
  isTrue     Boolean?
}
